              <li class="nav-item ms-3">
                <a class="nav-link addProject" aria-current="page" href="/add-project">Add My Project</a>
              </li>
            </ul>
            <form class="d-flex header-right justify-content-end">
                <a class="nav-link" href="/contact-me">Contact Me</a>
            </form>
          </div>
        </div>
    </nav>

    <div class="container-fluid d-flex flex-row justify-content-center main" >
        <div class="container main-cont">
            <div class="greet-content text-center my-4">
                <h2 class="fw-bold">GET IN TOUCH</h2>
            </div>
            <form name="formProject">
                <div class="mb-3">
                  <label for="inputName" class="form-label fw-bold">Name</label>
                  <input type="text" class="form-control" id="inputName" name="inputName">
                </div>
                
                <div class="mb-3">
                  <label for="inputEmail" class="form-label fw-bold">Email</label>
                  <input type="email" class="form-control" id="inputEmail" name="inputEmail">
                </div>

                <div class="mb-3">
                  <label for="inputPhone" class="form-label fw-bold">Phone Number</label>
                  <input type="text" class="form-control" id="inputPhone" name="inputPhone">
                </div>

                <div class="mb-3">
                    <label for="input-subject" class="form-label fw-bold">Subject</label>
                    <select class="form-select" id="input-subject" aria-label="Default select example">
                        <option selected disabled>Choose Subject</option>
                        <option value="1">Let's Talk</option>
                        <option value="2">Let's Collaboration</option>
                        <option value="3">I Am Hiring</option>
                    </select>
                </div>

                <div class="mb-5">
                  <label for="input-message" class="form-label fw-bold">Your Message</label>
                  <textarea class="form-control" id="input-message" rows="5"></textarea>
                </div>

                <button type="submit" class="btn btn-dark float-end rounded-pill px-4">Submit</button>
              </form>
        </div>
    </div>

